<div class="container">
  <div class="row">
    <h4>商品一覧</h4>
    <div class="col-12">
      <div class="text-right">
        <%= link_to "追加する", new_admin_item_path, class: "btn btn-success btn-sm mb-2" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table">
      <thead>
       <tr>
         <th>商品ID</th>
         <th>商品名</th>
         <th>税抜価格</th>
         <th>ジャンル</th>
         <th>ステータス</th>
         <th colspan="5"></th>
       </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
            <%end%>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active == true %>
             販売中
            <%else%>
             販売停止中
            <%end%>
          </td>
        </tr>
      </tbody>
      <%end%>
    </table>
    </div>
  </div>
</div>