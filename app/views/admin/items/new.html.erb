<div class="container">
  <h4>商品新規登録</h4>
  <div class="row">
    <div class="col-12">
      <% if @item.errors.any? %>
        <%= @item.errors.count %>件の未記入の項目があります
      <%end%>  
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-md-2">
      <%= form_with model: @item, url: admin_items_path do |f| %>
        <div class="form-group row">
          <label class="col-md-3 col-form-label">商品画像</label>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group row">
           <lavel class="col-md-3 col-form-label">商品名　</lavel>
            <%= f.text_field :name, class: "col-md-4" %>
        </div>

        <div class="form-group row">
          <label class="col-md-3 col-form-label">商品説明</label>
          <%= f.text_area :introduction, class: "col-md-4" %>
        </div>

        <div class="form-group row">
          <label class="col-md-3 col-form-label">ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--", class: "col-md-4" %>
        </div>

        <div class="form-group row">
          <label class="col-md-3 col-form-label">商品価格</label>
          <%= f.text_field :price, class: "col-md-4" %>円
        </div>

        <div class="form-group row">
          <label class="col-md-3 col-form-label">販売ステータス</label>
          <div class="col-md-4">
          <%= f.label :is_active, '販売中', value: true %>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '販売停止中', value: false  %>
          <%= f.radio_button :is_active, false %>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
      <%end%>
    </div>
  </div>
</div>