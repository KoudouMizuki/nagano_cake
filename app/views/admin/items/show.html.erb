<div class="container">
  <h4>商品詳細</h4>
  <div class="row">
    <div class="col-12">
      <div class="img-field">
        <%= image_tag @item.image.variant(resize: "300x400") %>
      </div>
      
      <div class="col-6">
        <div class="row">
          <div class="col-md-5">商品名</div>
            <%= @item.name %>
        </div>
        
        <div class="row">
          <div class="col-md-5">商品説明</div>
            <%= @item.introduction %>
        </div>
        
        <div class="row">
          <div class="col-md-5">ジャンル</div>
          <%= @item.genre.name %>
        </div>
        
        <div class="row">
          <div class="col-md-5">
            税込価格<br>
            (税抜価格)
          </div>
          <%= @item.price %>
          (<%= @item.with_tax_price %>)円
        </div>
        
        <div class="row">
          <div class="col-md-5">販売ステータス</div>
            <% if @item.is_active == true %>
              販売中
            <%else%>
              販売停止中
            <%end%>
        </div>
        
        <div class="row">
          <div class="col-12">
            <div class="text-center">
              <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
            </div>
          </div>
        </div>
      </div>  
    </div>
  </div>
</div>

