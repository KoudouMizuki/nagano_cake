<div class="container">
  <div class="row">
    <div class="col-12">
      <h4>会員一覧</h4>
      <div class="center-block">
        <table class="table">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>会員ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.first_name %><%= customer.last_name %>
                <%end%> 
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                  有効
                <%else%>
                  退会
                <%end%>
              </td>
              </tr>
            <%end%>  
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>