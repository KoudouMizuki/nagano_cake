<div class="container">
   <h4>ジャンル編集</h4>
   
   <div class="row">
     <div class="col-12">
       <% if @genre.errors.any? %>
         ジャンル名を記入してください
        <%end%> 
     </div>
   </div>
  <div class="row">
    <div class="col-5">
      <table>
        <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
          <tr>
            <th>ジャンル名</th>
            <td>
               <%= f.text_field :name %>
               <%= f.submit '変更を保存', class: "btn btn-success btn-lg" %>
            </td>
          </tr>
        <%end%>  
      </table>
    </div>
  </div>
</div>