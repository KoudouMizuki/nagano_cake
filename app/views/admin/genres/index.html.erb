<div class="container">
  <div class="row">
    <div class="col-12 mb-2">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12">
      <% if @genre.errors.any? %>
        ジャンル名を記入してください
      <%end%>  
    </div>
  </div>
  
  <div class="row">
    <div class="col-5">
      <table>
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <tr>
            <th>ジャンル名</th>
            <td>
              <div calss="form-group">
                <%= f.text_field :name %>
                <%= f.submit '新規登録', class: "btn btn-success btn-sm" %>
              </div>
            </td>
          </tr>
        <%end%>  
      </table>
      <p></p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-5">
      <table class="table">
        <thead>
          <tr>
           <th>ジャンル</th>
           <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
             <td><%= genre.name %></td>
             <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>