<div class="container">
  <h4>会員情報編集</h4>
  <div class="row">
    <div class="col-12">
      <% if @customer.errors.any? %>
        <%= @customer.errors.count %>件の未記入の項目があります
      <%end%>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= form_with model: @customer, url: customers_mypage_edit_path, method: :patch do |f| %>
        <div class="form-group row">
          <div class="col-md-3 col-form-label">氏名</div>
          <%= f.text_field :first_name, class: "col-2 mr-3" %>
          <%= f.text_field :last_name, class: "col-2" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">フリガナ</div>
          <%= f.text_field :first_name_kana, class: "col-2 mr-3" %>
          <%= f.text_field :last_name_kana, class: "col-2" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">郵便番号</div>
          <%= f.text_field :pastal_code, class: "col-2" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">住所</div>
          <%= f.text_field :address, class: "col-6" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">電話番号</div>
          <%= f.text_field :telephone_number, class: "col-2" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">メールアドレス</div>
          <%= f.email_field :email, class: "col-2" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label"></div>
          <%= f.submit "編集内容を保存", class: "btn btn-success col-3 mr-4" %>
          <%= link_to "退会する", customers_mypage_edit_confirm_path, class: "btn btn-danger " %>
        </div>
      <%end%>
    </div>
  </div>
</div>