<div class="container">
<h4>注文履歴詳細</h4>
  <div class="row">
    <div class="col-8">
      <h6><strong>注文情報</strong></h6>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postal_code %><br/><%= @order.address %><br/><%= @order.name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.peyment_type_i18n %></td>
        </tr>
      </table>
    </div>

    <div class="col-4">
      <h6><strong >請求情報</strong></h6>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= @order.peyment_amount %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.peyment_amount + @order.postage %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-9">
      <h6><strong>注文内容</strong></h6>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_dateils.each do |order_dateil| %>
            <tr>
              <td><%= order_dateil.item.name %></td>
              <td><%= order_dateil.item.with_tax_price %></td>
              <td><%= order_dateil.amount %></td>
              <td><%= order_dateil.item.with_tax_price*order_dateil.amount %></td>
            </tr>
          <%end%>
        </thead>
      </table>
    </div>
  </div>
</div>