<div class="container">
  <div class="row">
    <h4>注文情報入力</h4>
    <div class="col-12">
      <h6><strong>支払方法</strong></h4>
      <%= form_with model: @order, url: orders_confirm_path do |f| %>
        <div class="button">
        　<%= f.radio_button :peyment_type, Order.peyment_types.key(0) %>
        <%= f.label :peyment_type, Order.peyment_types_i18n[:credit_card] %>
        </div>

        <div class="button">
        　<%= f.radio_button :peyment_type, Order.peyment_types.key(1) %>
        <%= f.label :peyment_type, Order.peyment_types_i18n[:transfer] %>
        </div>

      <h4>お届け先</h4>
      <div class="button">
          <%= f.radio_button :address_number, 1 %>
          <strong><%= f.label :address_number_1, "ご自身の住所" %></strong><br/>
        　<%= current_customer.customer_display %>
      </div>
      <div class="button">
          <%= f.radio_button :address_number, 2 %>
          <strong><%= f.label :address_number_2, "登録済み住所から選択" %></strong><br/>
        　<%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
      </div>
      <div class="button">
        <%= f.radio_button :address_number, 3 %>
        <strong><%= f.label :address_number_3, "新しいお届け先" %></strong>
        <div class="form-group row">
        　<div class="col-md-3 col-form-label">郵便番号(ハイフンなし)</div>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group row">
        　<div class="col-md-3 col-form-label">住所</div>
          <%= f.text_field :address, class: "col-6" %>
        </div>
        <div class="form-group row">
        　<div class="col-md-3 col-form-label">宛名</div>
          <%= f.text_field :name %>
        </div>
        <%= f.submit "確認画面へ進む" %>
      </div>
      <%end%>
    </div>
  </div>
</div>
