<div class="container">
  <h4>商品一覧</h4>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-3">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.image.variant(resize: '200x300') %>
        <%end%>
        <div class="row">
          <div class="col-12">
            <%= item.name %><br/>
            ￥<%= item.price %>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>