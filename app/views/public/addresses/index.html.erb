<div class="container">
  <h4>配送先登録/一覧</h4>
  <div class="row">
    <div class="col-5">
      <% if @address.errors.any? %>
        <%= @address.errors.count %>件の未記入の項目があります
      <%end%>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12">
      <%= form_with model: @address, url: addresses_path do |f| %>
        <div class="form-group row">
          <div class="col-md-3 col-form-label">郵便番号(ハイフンなし)</div>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group row">
          <div class="col-md-3 col-form-label">住所</div>
          <%= f.text_field :address, class: "col-6" %>
        </div>
        <div class="form-group row">
          <div class="col-md-3 col-form-label">宛名</div>
          <%= f.text_field :name, class: "mr-2" %>
          <%= f.submit "新規登録", class: "btn btn-success btn-sm" %>
        </div>
      <%end%>
    </div>
  </div>

  <div class="row">
    <div class="col-9">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success btn-sm" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>