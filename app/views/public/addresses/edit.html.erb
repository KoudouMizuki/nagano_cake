<div class="container">
  <h4>配送先編集</h4></h4>
  <div class="row">
    <div class="col-lg-12">
      <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
        <div class="form-group">
          <label for="postal_code">郵便番号（ハイフンなし）</label>
          <%= f.text_field :pastal_code %>
        </div>
        <div class="form-group">
          <label for="address">住所　　　　　　　　　　</label>
          <%= f.text_field :address, class: "col-6" %>
        </div>
        <div class="form-group">
          <labelv for="name">宛名　　　　　　　　　　</label>
          <%= f.text_field :name %>　　　　　　　　　　　　　　　　　　　　　　　
          <%= f.submit "変更内容を保存", class: "btn btn-success btn-sm" %>
        </div>
      </div>
    <%end%>
  </div>
</div>